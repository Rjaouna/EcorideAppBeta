{
  "devDependencies": {
    "bootstrap": "^5.3.8",
    "esbuild": "^0.25.9",
    "sass": "^1.92.1"
  },
   "scripts": {
    "watch:css": "sass assets/styles/app.scss public/assets/css/app.css --watch",
    "build:css": "sass assets/styles/app.scss public/assets/css/app.css --style=compressed",
    "watch:js": "esbuild assets/js/app.js --bundle --outfile=public/assets/js/app.js --sourcemap --watch",
    "build:js": "esbuild assets/js/app.js --bundle --outfile=public/assets/js/app.js --minify",
    "dev": "npm-run-all --parallel watch:css watch:js",
    "build": "npm run build:css && npm run build:js"
  }
}
