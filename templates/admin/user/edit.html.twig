{% extends 'template.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
	<div
		class="container-fluid py-4">
		<!-- En-tête : titre + actions -->
		<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
			<h1 class="h4 mb-0 text-secondary">Modifier {{user.firstName}} {{ user.lastName}}</h1>

			<div class="d-flex gap-2">
				<a href="{{ path('app_user_index') }}" class="btn btn-outline-secondary mx-2">
					<i class="bi bi-card-list me-1"></i>
					Liste utilisateurs
				</a>

				{# Delete en inline (si tu gardes le partial _delete_form.html.twig) #}
				<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Confirmer la suppression de cet utilisateur ?');" class="m-0">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
<button class="btn btn-outline-danger  mx-2">

						<i class="bi bi-trash me-1"></i>
						Supprimer
					</button>
				</form>
			</div>
		</div>

		<!-- Carte formulaire -->
		<div class="card border-0 shadow-sm rounded-4">
			<div class="card-body p-4 p-md-5">
				{{ include('admin/user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
			</div>
		</div>
	</div>
{% endblock %}


