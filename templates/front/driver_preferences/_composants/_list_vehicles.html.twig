<div class="container my-3">

<h5 class="mb-3">Mes véhicules</h5>
<a href="{{ path('app_vehicle_new') }}" class="btn btn-link fw-bold">

	Ajouter une voiture
</a>

{% if vehicles is defined and vehicles|length > 0 %}
	{% for vehicle in vehicles %}
		<div class="d-flex justify-content-between align-items-center shadow-sm p-3 mb-3 rounded-3">
			<div>
				<strong>{{ vehicle.brand }}
					{{ vehicle.model }}</strong>
			</div>
			<div class="d-flex gap-2">
				<a href="{{ path('app_vehicle_edit', { id: vehicle.id }) }}" class="btn btn-link btn-sm">Modifier</a>
				<form method="post" action="{{ path('app_vehicle_delete', { id: vehicle.id }) }}" onsubmit="return confirm('Supprimer ce véhicule ?');" class="d-inline">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ vehicle.id) }}">
					<input type="hidden" name="_method" value="DELETE">
					<button class="btn btn-link text-danger btn-sm">Supprimer</button>
				</form>
			</div>
		</div>
	{% endfor %}
{% else %}
	<div class="alert alert-warning">
		Aucun véhicule enregistré.
		<a href="{{ path('app_vehicle_new') }}" class="alert-link">Ajouter un véhicule</a>
		pour pouvoir conduire.
	</div>
{% endif %}
</div>