<div class="container my-4">

	<h5 class="mb-3">Mes préférences de conducteur</h5>

	<a href="{{ path('app_driver_preferences_edit', { id: driverPreference.id }) }}" class="btn btn-link fw-bold">
		Modifier mes préférences
	</a>

	{% if driverPreference %}
		<ul class="list-group mb-4 shadow-sm">
			{# Affichage des préférences #}
			<li class="list-group-item d-flex justify-content-between align-items-center">
				Fumeur autorisé
				<span class="badge bg-{{ driverPreference.smokingAllowed ? 'success' : 'danger' }}">
					{{ driverPreference.smokingAllowed ? 'Oui' : 'Non' }}
				</span>
			</li>
			<li class="list-group-item d-flex justify-content-between align-items-center">
				Animaux autorisés
				<span class="badge bg-{{ driverPreference.petsAllowed ? 'success' : 'danger' }}">
					{{ driverPreference.petsAllowed ? 'Oui' : 'Non' }}
				</span>
			</li>
			<li class="list-group-item">
Autres préférences de conducteur :

				{% if driverPreference.extras is not empty %}
					<ul class="list-inline mb-0 mt-2">
						{% for extra in driverPreference.extras %}
							<li class="list-inline-item badge bg-secondary me-1">{{ extra }}</li>
						{% endfor %}
					{% endif %}
				</ul>
			{% else %}
				<span class="text-muted">Aucun extra défini</span>
			{% endif %}
		</li>
	</ul>
</div>
