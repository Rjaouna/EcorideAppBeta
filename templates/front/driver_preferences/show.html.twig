{% extends 'base.html.twig' %}

{% block title %}DriverPreferences{% endblock %}

{% block body %}
    <h1>DriverPreferences</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ driver_preference.id }}</td>
            </tr>
            <tr>
                <th>SmokingAllowed</th>
                <td>{{ driver_preference.smokingAllowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PetsAllowed</th>
                <td>{{ driver_preference.petsAllowed ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Extras</th>
                <td>{{ driver_preference.extras ? driver_preference.extras|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ driver_preference.createdAt ? driver_preference.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ driver_preference.updatedAt ? driver_preference.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_driver_preferences_index') }}">back to list</a>

    <a href="{{ path('app_driver_preferences_edit', {'id': driver_preference.id}) }}">edit</a>

    {{ include('driver_preferences/_delete_form.html.twig') }}
{% endblock %}
